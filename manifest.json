{
    "manifest_version": 3,
    "name": "ChatGPT Mic",
    "version": "0.0.1",
    "description": "Adds a speech to text mic to the ChatGPT website.",
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://chat.openai.com/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "mic-icon.png"
            ],
            "matches": [
                "https://chat.openai.com/*"
            ]
        }
    ]
}